{
  "version": 8,
  "name": "Norwegian Cadastral Map 1900",
  "metadata": {
    "description": "Style mimicking Norwegian cadastral/property maps from 1900s - clear property boundaries with traditional pink buildings",
    "era": "1900",
    "type": "cadastral"
  },
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "http://localhost:8080/data/trondheim.pmtiles"
    }
  },
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#faf8f5"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#c5e3f0",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "water-outline",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "line-color": "#7fb3d1",
        "line-width": 0.5
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#a8cde0",
        "line-width": {
          "base": 1.2,
          "stops": [
            [8, 0.5],
            [12, 1.5],
            [16, 3]
          ]
        }
      }
    },
    {
      "id": "landuse-forest",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["in", "class", "wood", "forest"],
      "paint": {
        "fill-color": "#e8f0e8",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "landuse-forest-boundary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["in", "class", "wood", "forest"],
      "paint": {
        "line-color": "#a0c0a0",
        "line-width": 0.5,
        "line-dasharray": [2, 2]
      }
    },
    {
      "id": "landuse-grass",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["in", "class", "grass", "meadow", "park"],
      "paint": {
        "fill-color": "#f0f5e8",
        "fill-opacity": 0.4
      }
    },
    {
      "id": "landuse-residential",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", "class", "residential"],
      "paint": {
        "fill-color": "#f5f0ea",
        "fill-opacity": 0.3
      }
    },
    {
      "id": "landuse-boundary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "paint": {
        "line-color": "#c0b0a0",
        "line-width": 0.5,
        "line-dasharray": [3, 2]
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "fill-color": "#e6b8b8",
        "fill-opacity": 0.85
      }
    },
    {
      "id": "building-outline",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "line-color": "#b08080",
        "line-width": {
          "base": 1.2,
          "stops": [
            [13, 0.5],
            [16, 1],
            [20, 2]
          ]
        }
      }
    },
    {
      "id": "road-minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "minor", "service", "track"],
      "paint": {
        "line-color": "#3a3a3a",
        "line-width": {
          "base": 1.2,
          "stops": [
            [12, 0.5],
            [16, 1],
            [20, 2]
          ]
        }
      }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "secondary", "tertiary"],
      "paint": {
        "line-color": "#2a2a2a",
        "line-width": {
          "base": 1.2,
          "stops": [
            [10, 0.8],
            [14, 1.5],
            [18, 3]
          ]
        }
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "primary", "trunk"],
      "paint": {
        "line-color": "#1a1a1a",
        "line-width": {
          "base": 1.2,
          "stops": [
            [8, 1],
            [12, 2],
            [16, 4]
          ]
        }
      }
    },
    {
      "id": "railway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "rail"],
      "paint": {
        "line-color": "#1a1a1a",
        "line-width": {
          "base": 1.2,
          "stops": [
            [10, 0.8],
            [14, 1.5],
            [18, 2.5]
          ]
        }
      }
    },
    {
      "id": "railway-hatching",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "rail"],
      "paint": {
        "line-color": "#1a1a1a",
        "line-width": {
          "base": 1.2,
          "stops": [
            [10, 2],
            [14, 4],
            [18, 6]
          ]
        },
        "line-dasharray": [0.2, 1.5]
      }
    },
    {
      "id": "boundary-administrative",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["==", "admin_level", 2],
      "paint": {
        "line-color": "#8a6a4a",
        "line-width": 1.5,
        "line-dasharray": [6, 3, 2, 3]
      }
    },
    {
      "id": "boundary-municipality",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["in", "admin_level", 4, 6],
      "paint": {
        "line-color": "#a08070",
        "line-width": 1,
        "line-dasharray": [4, 2]
      }
    },
    {
      "id": "place-label-city",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "city"],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 14,
        "text-transform": "uppercase",
        "text-letter-spacing": 0.15
      },
      "paint": {
        "text-color": "#1a1a1a",
        "text-halo-color": "#faf8f5",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-label-town",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["in", "class", "town", "village"],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 11
      },
      "paint": {
        "text-color": "#2a2a2a",
        "text-halo-color": "#faf8f5",
        "text-halo-width": 0.8
      }
    },
    {
      "id": "property-number",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 16,
      "layout": {
        "text-field": "{render_height}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 9
      },
      "paint": {
        "text-color": "#6a5a4a",
        "text-halo-color": "#faf8f5",
        "text-halo-width": 0.5
      }
    }
  ]
}
