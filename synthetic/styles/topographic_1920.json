{
  "version": 8,
  "name": "Norwegian Topographic Map 1920",
  "metadata": {
    "description": "Style mimicking Norwegian topographic maps from 1920s - contour-like appearance with red main roads",
    "era": "1920",
    "type": "topographic"
  },
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "http://localhost:8080/data/trondheim.pmtiles"
    }
  },
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f5f3ed"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#b8d9e8",
        "fill-opacity": 0.75
      }
    },
    {
      "id": "water-shore",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "line-color": "#5a8ca8",
        "line-width": {
          "base": 1.2,
          "stops": [
            [8, 0.5],
            [14, 1],
            [18, 1.5]
          ]
        }
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#88b5cc",
        "line-width": {
          "base": 1.2,
          "stops": [
            [8, 0.8],
            [12, 2],
            [16, 4]
          ]
        }
      }
    },
    {
      "id": "waterway-label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "minzoom": 13,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Italic"],
        "text-size": 10,
        "symbol-placement": "line"
      },
      "paint": {
        "text-color": "#4a7088",
        "text-halo-color": "#f5f3ed",
        "text-halo-width": 1
      }
    },
    {
      "id": "landuse-forest",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["in", "class", "wood", "forest"],
      "paint": {
        "fill-color": "#d5e5c8",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "landuse-grass",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["in", "class", "grass", "meadow", "park"],
      "paint": {
        "fill-color": "#e0ead5",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "landuse-agricultural",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", "class", "farmland"],
      "paint": {
        "fill-color": "#ede8d8",
        "fill-opacity": 0.4
      }
    },
    {
      "id": "landuse-residential",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", "class", "residential"],
      "paint": {
        "fill-color": "#e8e4d8",
        "fill-opacity": 0.4
      }
    },
    {
      "id": "building-fill",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "fill-color": "#d8d0c0",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "building-outline",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "line-color": "#2a2520",
        "line-width": {
          "base": 1.2,
          "stops": [
            [13, 0.6],
            [16, 1],
            [20, 1.5]
          ]
        }
      }
    },
    {
      "id": "road-path",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "path", "track"],
      "paint": {
        "line-color": "#4a4030",
        "line-width": {
          "base": 1.2,
          "stops": [
            [13, 0.5],
            [16, 1],
            [20, 1.5]
          ]
        },
        "line-dasharray": [2, 2]
      }
    },
    {
      "id": "road-minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "minor", "service"],
      "paint": {
        "line-color": "#1a1510",
        "line-width": {
          "base": 1.2,
          "stops": [
            [12, 0.8],
            [16, 1.5],
            [20, 3]
          ]
        }
      }
    },
    {
      "id": "road-minor-casing",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "minor", "service"],
      "paint": {
        "line-color": "#f5f3ed",
        "line-width": {
          "base": 1.2,
          "stops": [
            [12, 2],
            [16, 3.5],
            [20, 6]
          ]
        },
        "line-gap-width": {
          "base": 1.2,
          "stops": [
            [12, 0.8],
            [16, 1.5],
            [20, 3]
          ]
        }
      }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "secondary", "tertiary"],
      "paint": {
        "line-color": "#1a1510",
        "line-width": {
          "base": 1.2,
          "stops": [
            [10, 1],
            [14, 2],
            [18, 4]
          ]
        }
      }
    },
    {
      "id": "road-secondary-casing",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "secondary", "tertiary"],
      "paint": {
        "line-color": "#f5f3ed",
        "line-width": {
          "base": 1.2,
          "stops": [
            [10, 2.5],
            [14, 4.5],
            [18, 8]
          ]
        },
        "line-gap-width": {
          "base": 1.2,
          "stops": [
            [10, 1],
            [14, 2],
            [18, 4]
          ]
        }
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "primary", "trunk"],
      "paint": {
        "line-color": "#c84030",
        "line-width": {
          "base": 1.2,
          "stops": [
            [8, 1.5],
            [12, 3],
            [16, 6]
          ]
        }
      }
    },
    {
      "id": "road-primary-casing",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "primary", "trunk"],
      "paint": {
        "line-color": "#2a2520",
        "line-width": {
          "base": 1.2,
          "stops": [
            [8, 3],
            [12, 5.5],
            [16, 11]
          ]
        },
        "line-gap-width": {
          "base": 1.2,
          "stops": [
            [8, 1.5],
            [12, 3],
            [16, 6]
          ]
        }
      }
    },
    {
      "id": "railway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "rail"],
      "paint": {
        "line-color": "#1a1510",
        "line-width": {
          "base": 1.2,
          "stops": [
            [10, 0.8],
            [14, 1.5],
            [18, 2.5]
          ]
        }
      }
    },
    {
      "id": "railway-hatching",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "rail"],
      "paint": {
        "line-color": "#1a1510",
        "line-width": {
          "base": 1.2,
          "stops": [
            [10, 3],
            [14, 5],
            [18, 8]
          ]
        },
        "line-dasharray": [0.2, 1.2]
      }
    },
    {
      "id": "boundary-administrative",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["==", "admin_level", 2],
      "paint": {
        "line-color": "#8a5a3a",
        "line-width": 2,
        "line-dasharray": [5, 2, 1, 2, 1, 2]
      }
    },
    {
      "id": "boundary-municipality",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["in", "admin_level", 4, 6],
      "paint": {
        "line-color": "#9a7a5a",
        "line-width": 1.5,
        "line-dasharray": [4, 2, 2, 2]
      }
    },
    {
      "id": "place-label-city",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "city"],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Bold"],
        "text-size": 16,
        "text-transform": "uppercase",
        "text-letter-spacing": 0.1
      },
      "paint": {
        "text-color": "#1a1510",
        "text-halo-color": "#f5f3ed",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "place-label-town",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["in", "class", "town", "village"],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 12
      },
      "paint": {
        "text-color": "#2a2520",
        "text-halo-color": "#f5f3ed",
        "text-halo-width": 1.2
      }
    },
    {
      "id": "road-label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "minzoom": 14,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Italic"],
        "text-size": 10,
        "symbol-placement": "line",
        "text-rotation-alignment": "map"
      },
      "paint": {
        "text-color": "#4a4030",
        "text-halo-color": "#f5f3ed",
        "text-halo-width": 1
      }
    },
    {
      "id": "elevation-spot",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "poi",
      "filter": ["==", "class", "peak"],
      "minzoom": 13,
      "layout": {
        "text-field": "{ele}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 9,
        "icon-image": "triangle-11"
      },
      "paint": {
        "text-color": "#3a3028",
        "text-halo-color": "#f5f3ed",
        "text-halo-width": 0.8
      }
    }
  ]
}
