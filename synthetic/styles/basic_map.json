{
  "version": 8,
  "name": "Basic Historical Map Style",
  "metadata": {
    "description": "A simple style for rendering basic map features - buildings, roads, water, and vegetation",
    "era": "modern",
    "type": "base"
  },
  "sources": {
    "vector_tiles": {
      "type": "vector",
      "tiles": ["pmtiles://data.pmtiles/{z}/{x}/{y}"]
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f2efe9"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "vector_tiles",
      "source-layer": "water",
      "filter": ["==", "$type", "Polygon"],
      "paint": {
        "fill-color": "#aad3df",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "water_outline",
      "type": "line",
      "source": "vector_tiles",
      "source-layer": "water",
      "filter": ["==", "$type", "Polygon"],
      "paint": {
        "line-color": "#7eb8cc",
        "line-width": 1
      }
    },
    {
      "id": "landuse_forest",
      "type": "fill",
      "source": "vector_tiles",
      "source-layer": "landuse",
      "filter": ["in", "class", "wood", "forest", "park", "grass"],
      "paint": {
        "fill-color": "#d4e7c5",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "landuse_residential",
      "type": "fill",
      "source": "vector_tiles",
      "source-layer": "landuse",
      "filter": ["==", "class", "residential"],
      "paint": {
        "fill-color": "#e8e4e0",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "road_minor",
      "type": "line",
      "source": "vector_tiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "minor", "service"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": {
          "stops": [
            [12, 1],
            [14, 2],
            [16, 4]
          ]
        },
        "line-opacity": 0.9
      }
    },
    {
      "id": "road_secondary",
      "type": "line",
      "source": "vector_tiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "secondary", "tertiary"],
      "paint": {
        "line-color": "#fefefe",
        "line-width": {
          "stops": [
            [12, 2],
            [14, 3],
            [16, 6]
          ]
        },
        "line-opacity": 1.0
      }
    },
    {
      "id": "road_primary",
      "type": "line",
      "source": "vector_tiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "primary", "trunk"],
      "paint": {
        "line-color": "#ffe68c",
        "line-width": {
          "stops": [
            [12, 2],
            [14, 4],
            [16, 8]
          ]
        },
        "line-opacity": 1.0
      }
    },
    {
      "id": "road_motorway",
      "type": "line",
      "source": "vector_tiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "motorway"],
      "paint": {
        "line-color": "#ffcc66",
        "line-width": {
          "stops": [
            [12, 3],
            [14, 5],
            [16, 10]
          ]
        },
        "line-opacity": 1.0
      }
    },
    {
      "id": "railway",
      "type": "line",
      "source": "vector_tiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "rail"],
      "paint": {
        "line-color": "#555555",
        "line-width": 1.5,
        "line-dasharray": [6, 4]
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "vector_tiles",
      "source-layer": "building",
      "filter": ["==", "$type", "Polygon"],
      "paint": {
        "fill-color": "#d9d0c9",
        "fill-opacity": 0.9
      }
    },
    {
      "id": "building_outline",
      "type": "line",
      "source": "vector_tiles",
      "source-layer": "building",
      "filter": ["==", "$type", "Polygon"],
      "paint": {
        "line-color": "#a89f99",
        "line-width": 0.5
      }
    }
  ]
}
