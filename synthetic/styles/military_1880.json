{
  "version": 8,
  "name": "Norwegian Military Survey Map 1880",
  "metadata": {
    "description": "Style mimicking Norwegian military survey maps from 1880s - muted earth tones with hand-drawn appearance",
    "era": "1880",
    "type": "military_survey"
  },
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "http://localhost:8080/data/trondheim.pmtiles"
    }
  },
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#e8e0d0"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#5f7a8a",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "water-pattern",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-pattern": "water_hatching",
        "fill-opacity": 0.15
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#5f7a8a",
        "line-width": {
          "base": 1.2,
          "stops": [
            [8, 0.5],
            [12, 1.5],
            [16, 3]
          ]
        }
      }
    },
    {
      "id": "landuse-forest",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["in", "class", "wood", "forest"],
      "paint": {
        "fill-color": "#a8c3a0",
        "fill-opacity": 0.3
      }
    },
    {
      "id": "landuse-forest-stipple",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["in", "class", "wood", "forest"],
      "paint": {
        "fill-pattern": "forest_stipple",
        "fill-opacity": 0.4
      }
    },
    {
      "id": "landuse-grass",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["in", "class", "grass", "meadow", "park"],
      "paint": {
        "fill-color": "#c8d4b8",
        "fill-opacity": 0.3
      }
    },
    {
      "id": "landuse-residential",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", "class", "residential"],
      "paint": {
        "fill-color": "#d8cfbe",
        "fill-opacity": 0.4
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "fill-color": "#3d3530",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "road-minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "minor", "service", "track"],
      "paint": {
        "line-color": "#a89578",
        "line-width": {
          "base": 1.2,
          "stops": [
            [12, 0.8],
            [16, 2],
            [20, 4]
          ]
        },
        "line-opacity": 0.7
      }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "secondary", "tertiary"],
      "paint": {
        "line-color": "#94805a",
        "line-width": {
          "base": 1.2,
          "stops": [
            [10, 1],
            [14, 2.5],
            [18, 5]
          ]
        },
        "line-opacity": 0.8
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "primary", "trunk"],
      "paint": {
        "line-color": "#7a6542",
        "line-width": {
          "base": 1.2,
          "stops": [
            [8, 1.5],
            [12, 3],
            [16, 6]
          ]
        },
        "line-opacity": 0.9
      }
    },
    {
      "id": "railway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "rail"],
      "paint": {
        "line-color": "#2d2520",
        "line-width": {
          "base": 1.2,
          "stops": [
            [10, 1],
            [14, 2],
            [18, 3]
          ]
        },
        "line-dasharray": [3, 3]
      }
    },
    {
      "id": "boundary-administrative",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["==", "admin_level", 2],
      "paint": {
        "line-color": "#8b7355",
        "line-width": 2,
        "line-dasharray": [4, 2, 1, 2],
        "line-opacity": 0.7
      }
    },
    {
      "id": "place-label-city",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "city"],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Serif Regular"],
        "text-size": 16,
        "text-transform": "uppercase",
        "text-letter-spacing": 0.1
      },
      "paint": {
        "text-color": "#2d2520",
        "text-halo-color": "#e8e0d0",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "place-label-town",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["in", "class", "town", "village"],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Serif Regular"],
        "text-size": 12
      },
      "paint": {
        "text-color": "#3d3530",
        "text-halo-color": "#e8e0d0",
        "text-halo-width": 1.2
      }
    }
  ]
}
